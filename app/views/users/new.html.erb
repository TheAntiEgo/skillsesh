<div class="jumbotron text-center">
  <div class="container-fluid">
    <header>
      <div class="row">
        <p>&nbsp;</p>
        <p>&nbsp;</p>
      </div>
      <div class="row heavy">
        <div class="col-xs-12 col-sm-4 col-md-4">
          <h1>
            Teach.
          </h1>
        </div>
        <div class="col-xs-12 col-sm-4 col-md-4">
          <h1>
            Learn.
          </h1>
        </div>
        <div class="col-xs-12 col-sm-4 col-md-4">
          <h1>
            Earn.    
          </h1>
        </div>
        <div class="row">
          <p >&nbsp;</p>
          <br><br/> <br><br/>    
        </div>
      </div>
    </header>
    <div class="row">
      <div class="col-xs-12">
        <h2 class="hero-action text-center">
          Join Portland's Learning Community
        </h2>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-md-6">
        <div class="dropdown text-right">
          <button class="btn btn-lg btn-primary" data-toggle="modal" data-target="#basicModal1">
          Teach a skill
          </button>
          <div class="modal fade" id="basicModal1" tabindex="-1" role="dialog" aria-labelledby="basicModal1" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                  <h4 class="modal-title" id="myModalLabel">
                    <h1 class="text-center">Sign Up With</h1>
                  </h4>
                </div>
                <div class="modal-body text-center">
                  <%= render '/partials/loginbutt.html' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-md-6">
        <div class="dropdown text-left">
          <button class="btn btn-lg btn-info" data-toggle="modal" data-target="#basicModal2">
          Learn a skill
          </button>
          <div class="modal fade" id="basicModal2" tabindex="-1" role="dialog" aria-labelledby="basicModal2" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                  <h4 class="modal-title" id="myModalLabel">
                    <h1 class="text-center">Join us when we launch!</h1>
                  </h4>
                </div>
                <div class="modal-body text-center">
                  <%= form_tag '/emails/create', remote: true do %>
                  <div class="form-group">
                    <%= email_field_tag :placeholder => "joe@example.com", :class => "form-control" %>
                  </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <section class="tutors">
    <div class="intro">
      <div class="row">
        <div class="col-xs-12">
          <h2 class="text-center">
            Meet Your Tutors
          </h2>
        </div>
      </div>
    </div>
    <div class="tutors-listing">
      <div class="row text-center">
        <% @users.each do |tutor| %>
        <div class="col-xs-12 col-sm-3">
          <div class="row tutor">
            <div class="col-xs-6 col-sm-12 highlightit">
              <%= image_tag tutor.photo, :class => 'img-responsive img-circle tutor-photo' %>
              <div class="col-xs-4">
                <h4 class="tutor-name">
                  <%= tutor.first_name %>
                </h4>
                <p>
                  Teaches
                </p>
                <strong class="tutor-skills tutort">
                <%= tutor.teachables %>
                </strong>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </section>
  <section class="mission">
    <div class="intro">
      <div class="row">
        <div class="col-xs-12 text-center">
          <h2>
            The Mission
          </h2>
        </div>
      </div>
    </div>
    <div class="mission-content">
      <div class="row">
        <div class="col-xs-12 col-sm-8 col-md-12">
          <h4>
            Our mission is to harness the untapped talents of your local community, making it possible to learn anything from anyone at anytime.
          </h4>
          <h4>
            Other teaching sites are ivory towers with high barriers to entry. Students have to commit to expensive, time-consuming courses, and only the select, credentialed few are allowed to teach. SkillSesh democratizes the learning process, allowing you to acquire new skills from the members of your own community.
          </h4>
        </div>
      </div>
    </div>
  </section>
  <section class="team">
    <div class="row">
      <div class="col-xs-12 text-center">
        <h2>
          Your team
        </h2>
      </div>
      <div class="col-xs-4 highlightit team-member">
        <div class="row">
          <div class="col-xs-12">
            <%= link_to image_tag '/images/jhead.png', size: '220x220', :class => "img-responsive img-circle",  :href => "https://www.linkedin.com/pub/john-connor/36/358/8b4/", :target => "_blank" %>
            <h3 class="text-center">
              John
            </h3>
            <p class="lead text-center">
              Markets
            </p>
          </div>
        </div>
      </div>
      <div class="col-xs-4 highlightit team-member">
        <div class="row">
          <div class="col-xs-12">
            <%= image_tag '/images/bhead.png', size: '220x220', :class => "img-responsive img-circle", :href => "https://www.linkedin.com/pub/beno%C3%AEt-barberousse/8a/aab/616", :target => "_blank" %>
            <h3 class="text-center">
              Benoit
            </h3>
            <p class="lead text-center">
              Tech
            </p>
          </div>
        </div>
      </div>
      <div class="col-xs-4 highlightit team-member">
        <div class="row">
          <div class="col-xs-12">
            <%= link_to image_tag '/images/Brandonpic.png', size: '220x220', :class => "img-responsive img-circle",  :href => "https://www.linkedin.com/pub/brandon-gordon/99/64a/497", :target => "_blank" %>
            <h3 class="text-center">
              Brandon
            </h3>
            <p class="lead text-center">
              Narrative
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="share">
    <div class="row">
      <div class="col-xs-12 text-center">
        <div class="col-xs-12 col-md-6">
          <h3>
            Follow Our Journey <br><br/>
          </h3>
          <div class="col-xs-offset-1 col-xs-3 highlightit2">
            <%= image_tag '/images/Gplus.png', size: '70x70', :href => "https://plus.google.com/108372836959462323148/posts", :target => "_blank" %>
          </div>
          <div class="col-xs-3 highlightit2">
            <%= image_tag '/images/Facebook.png', size: '70x70', :href => "https://www.facebook.com/SkillSesh", :target => "_blank" %>
          </div>
