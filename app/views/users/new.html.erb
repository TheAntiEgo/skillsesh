<div class="jumbotron">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12">
                <h2 class="text-center">
                    Learn what you want from the people in your community
                </h2>
            </div>  <!-- END of column -->
        </div> <!-- END of row -->
        <div class="row">
            <div class="col-xs-12">
                <h3 class="text-center">
                    We'll be launching in Portland soon!
                </h3 >
                <h3 class="text-center">
                    Sign up with
                </h3>
            </div> <!-- END of column -->
        </div> <!-- END of row -->
    <div class="oauth text-center">        
        <div class="row">
            <div class="col-xs-12 text-center">
                <a href="/auth/facebook">
                    <button class="btn btn-default btn-block btn-lg">
                        Facebook
                    </button>
                </a>
            </div> <!-- END of column -->
            <div class="col-xs-12 text-center">
                <a href="/auth/google">
                    <button class="btn btn-default btn-block btn-lg">
                        Google
                    </button>
                </a>
            </div> <!-- END of column -->
            <div class="col-xs-12 text-center">
                <a href="/auth/linkedin">
                    <button class="btn btn-default btn-block btn-lg">
                        LinkedIn
                    </button>
                </a>
            </div> <!-- END of column -->
        </div> <!-- END of row -->
    </div>
    </div> <!-- END of container -->
</div> <!-- END of jumbotron -->
<section class="info">
    
</section>
<section class="spotlight">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 text-center">
                <h3>Meet some of our teachers</h3>
            </div>
        </div>
        <div class="row">
            <% @users.each do |user| %>
            <div class="col-xs-12">
                <div class="row">   
                    <div class="col-xs-6 col-xs-offset-3 col-sm-6">
                        <%= image_tag user.photo.url, class: 'img-responsive img-circle text-center' %>
                    </div>
                    <div class="col-xs-12 text-center">
                        <h4>
                            <%= user.first_name %>
                        </h4>
                        <p class="small">
                            teaches <%= user.teachables %>
                        </p>
                    </div>
                    <div class="col-xs-11 col-xs-offset-1">
                        <p class="user-bio">
                            <%= user.bio %>
                        </p>
                    </div>
                </div>
            </div>
            <% end %>
    </div>
</section>

