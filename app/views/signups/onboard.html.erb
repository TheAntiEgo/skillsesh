<script>
  function countChar(val) {
    var len = val.value.length;
    if (len >= 500) {
      val.value = val.value.substring(0, 500);
    } else {
      $('#charNum').text(500 - len);
    }
  };
</script>
<link rel="stylesheet" type="text/css" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1/themes/flick/jquery-ui.css">
<link href="css/jquery.tagit.css" rel="stylesheet" type="text/css">
<div class="container">
 <div class="user-prompt text-center">
      <div class="row">
        <div class="col-xs-12">
          <p class="lead" style="margin-top: 30px">
            <%= @profile.first_name %>! Thanks for joining Skillsesh.
          </p>
        </div>
      </div>
    </div>
  <div class="user-onboard">
    <div class="user-photo">
      <div class="row">
        <div class="col-xs-8 col-xs-offset-2"> 
        <div class="col-xs-12 col-sm-4 col-sm-offset-4 highlightit">
          <%= image_tag @profile.photo, class: 'img-responsive img-circle' %>
        </div>
      </div>
     </div>
    </div>
    <div class="user-form col-xs-12 col-sm-8 col-sm-offset-2">
      <%= form_for @profile, url: update_path, html: {role: 'form'} do |f| %>
        <div class="form-group text-center" rel="tooltip" title="Search All Items">
          <%= label_tag :bio, "Why don't you tell us a little bit about yourself?", class: 'h4' %>
          <div id="charNum"></div>  
          <%= f.text_area :bio, class: 'form-control has-popover', maxlength: "500", onkeyup: "countChar(this)", placeholder: "500 word max, please, it's just three tweets!", 
           data: {toggle: "popover", html: "true", placement: "top", content: "#charNum" }, title: "Popover to give hot tips!" %>
        </div>
        <div class="form-group text-center">
          <%= label_tag :skills, "What skills can you teach?", class: 'h4' %>
            <%= f.text_field :skills, class: 'form-control has-popover', placeholder: 'Like piano, sewing, music, etc',
             data: {role:'tagsinput', toggle: "popover", html: "true", placement: "top", content: "#charNum" }, title: "Popover to give hot tips!", value: "" %>
        </div>
        <div class="text-center">
          <%= f.submit class: 'btn btn-info btn-default btn-lg text-center', value: "Submit" %>
        </div>
      <% end %>
       <p>                      <img class="img-responsive center-block" src="/images/Skillsesh_Five.png" style="height: 150px; width: auto;"/>
</p>
    </div>
  </div>
</div>
