<script>
  function countChar(val) {
    var len = val.value.length;
    if (len >= 500) {
      val.value = val.value.substring(0, 500);
    } else {
      $('#charNum').text(500 - len);
    }
  };
</script>
<div class="container">
  <div class="user-onboard">
    <div class="user-photo">
      <div class="row">
         <p></p>
        <div class="col-xs-8 col-xs-offset-2"> 
        <div class="col-xs-8 col-xs-offset-2 col-sm-4 col-sm-offset-4 highlightit barrier">
          <%= image_tag @profile.photo, class: 'img-responsive img-circle' %>
        </div>
      </div>
     </div>
    </div>
    <div class="user-prompt text-center">
      <div class="row">
        <div class="col-xs-12">
          <p class="lead">
            Hi <%= @profile.first_name %>! Thanks for joining Skillsesh.
          </p>
        </div>
      </div>
    </div>
    <div class="user-form col-xs-8 col-xs-offset-2">
      <%= form_for @profile, url: update_path, html: {role: 'form'} do |f| %>
        <div class="form-group" rel="tooltip" title="Search All Items">
          <%= label_tag :bio, "Why don't you tell us a little bit about yourself?" %>
          <div id="charNum"></div>  
          <%= f.text_area :bio, class: 'form-control has-popover', maxlength: "500", onkeyup: "countChar(this)", placeholder: "500 word max, please, it's just three tweets!", 
           data: {toggle: "popover", html: "true", placement: "top", content: "#charNum" }, title: "Popover to give hot tips!" %>
        </div>
        <div class="form-group">
          <%= label_tag :skills, "What do you think you can teach?" %>
          <%= f.text_field :skills, class: 'form-control', placeholder: 'Like piano, sewing, music, etc', data: {toggle: "tooltip", placement: "top" }, title: "tooltip on second input! more words to text fit", value: "" %>
        </div>
        <div class="text-center">
          <%= f.submit class: 'btn btn-info btn-default btn-lg text-center', value: "Submit" %>
        </div>
      <% end %>
       <p></p>
    </div>
  </div>
</div>
